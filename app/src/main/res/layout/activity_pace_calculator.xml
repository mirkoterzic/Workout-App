<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Distance"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/distanceInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/calculateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTime"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/Pace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="46dp"
            android:text="Pace"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/minuteInputPace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:hint="00"
            android:inputType="number" />

        <EditText
            android:id="@+id/secondInputPace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:hint="00"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Calculate missing param"
        app:layout_constraintBottom_toTopOf="@+id/resultTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/resultTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:padding="16dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="Distance"
                android:textStyle="bold" />

            <TextView
                android:padding="7dp"
                android:text="Estimated Time"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="5 km" />

            <TextView
                android:id="@+id/time5k"
                android:padding="7dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="10 km" />

            <TextView
                android:id="@+id/time10k"
                android:padding="7dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="Half Marathon" />

            <TextView
                android:id="@+id/timeHalfMarathon"
                android:padding="7dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="7dp"
                android:text="Marathon" />

            <TextView
                android:id="@+id/timeMarathon"
                android:padding="7dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="46dp"
            android:text="Time"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/hourInputTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="00"
            android:inputType="number"
            android:onClick="showHourPicker" />

        <EditText
            android:id="@+id/minuteInputTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="00"
            android:inputType="number"
            android:onClick="showMinutePicker" />

        <EditText
            android:id="@+id/secondInputTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="00"
            android:inputType="number"
            android:onClick="showSecondPicker" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
